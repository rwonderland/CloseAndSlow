
@{
    ViewBag.Title = "Bienvenido al hotel Cabo Vilán";
    Layout = "~/Views/Shared/_LayoutRegistrados.cshtml";

}
<style>
    .imag-hotel {
        height: 25%;
        width: 25%;
        position: center;
    }

    .contenido {
        margin: 8%;
    }
    .text-hotel {
        color: #B2533E;
        height:7rem;
        text-align:center;
       
    }
</style>


<h2>@ViewBag.Title</h2>
<div class="">
    @* meter dos imágenes más de exteriores en un flex *@
    <img src="~/Content/imagenes/hoteles/hotel_cabo_vilan.jpg" class="imag-hotel" alt="...">
</div>

<div class="mt-5 bg-black text-hotel ">
    <p class="pt-4 h2">HABITACIONES</p>

</div >

<div class="contenido">
    @* AQUI VAN LAS HABITACIONES CON FLEX *@

    <div class=" w-50 h-50">
        <!-- Carousel -->
        <div id="hab1" class="carousel slide" data-bs-ride="carousel">
            <h5>Habitacion doble</h5>
            <!-- Indicators/dots -->
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#hab1" data-bs-slide-to="0" class="active"></button>
                <button type="button" data-bs-target="#hab1" data-bs-slide-to="1"></button>
                <button type="button" data-bs-target="#hab1" data-bs-slide-to="2"></button>
            </div>

            <!-- The slideshow/carousel -->
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/Content/imagenes/hoteles/hotel_cabo_vilan.jpg" alt="Los Angeles" class="d-block  w-100">
                </div>
                <div class="carousel-item">
                    <img src="~/Content/imagenes/hoteles/hotel_cabo_vilan.jpg" alt="Los Angeles" class="d-block  w-100">
                </div>
                <div class="carousel-item">
                    <img src="~/Content/imagenes/hoteles/hotel_cabo_vilan.jpg" alt="Los Angeles" class="d-block  w-100">
                </div>
            </div>

            <!-- Left and right controls/icons -->
            <button class="carousel-control-prev" type="button" data-bs-target="#hab1" data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#hab1" data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
            </button>
            <h5>Descripcion</h5>
            <div>Describimos la habitacion</div>
        </div>


        <div id="hab2" class="carousel slide " data-bs-ride="carousel">
            <h5>Habitacion familiar </h5>
            <!-- Indicators/dots -->
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#hab2" data-bs-slide-to="0" class="active"></button>
                <button type="button" data-bs-target="#hab2" data-bs-slide-to="1"></button>
                <button type="button" data-bs-target="#hab2" data-bs-slide-to="2"></button>
            </div>

            <!-- The slideshow/carousel -->
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/Content/imagenes/hoteles/hotel_cabo_vilan.jpg" alt="Los Angeles" class="d-block   w-100">
                </div>
                <div class="carousel-item">
                    <img src="~/Content/imagenes/hoteles/hotel_cabo_vilan.jpg" alt="Los Angeles" class="d-block   w-100">
                </div>
                <div class="carousel-item">
                    <img src="~/Content/imagenes/hoteles/hotel_cabo_vilan.jpg" alt="Los Angeles" class="d-block  w-100">
                </div>
            </div>

            <!-- Left and right controls/icons -->
            <button class="carousel-control-prev" type="button" data-bs-target="#hab2" data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#hab2" data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
            </button>
            <h5>Descripcion</h5>
            <div>Describimos la habitacion</div>
            @* aqui viene el boton que lanza el modal de la reserva, que será una partial class comun a todos los hoteles, se llevara en campo oculto el id del hotel(tiene que estar cargado previamente *@

        </div>
        <a href="#" class="btn btn-primary grad p-2" data-bs-toggle="modal" data-bs-target="#staticBackdrop">Reserva</a>
        @using (Ajax.BeginForm("IndexReserva", "Reserva", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "respuesta", OnSuccess = "handleResponseBooking", OnFailure = "handleFailure" }))
        {
            <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="staticBackdropLabel">Indica los datos de tu reserva</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            @* calendario, num  *@




                            ...
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-info" data-bs-dismiss="modal">Salir</button>
                            <button type="submit" class="btn btn-info">Confirmar</button>
                        </div>
                    </div>
                </div>
            </div>
            <div id="respuesta"></div>
            <div id="respuesta"></div>
        }


    </div>

</div>


